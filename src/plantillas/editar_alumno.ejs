<%- include ('elementos/encabezado') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <form action="/save/<%= data.boleta %>" method="post">
                                <div class="form-group">
                                    <input type="text" name="boleta" value="<%= data.boleta %>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="grupo" value="<%= data.grupo %>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="telefono" value="<%= data.telefono %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="correo" value="<%= data.correo %>" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">Editar alumno</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ('elementos/pie') %>